@model IEnumerable<TodoList.Models.Tache>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>
<p>
    <span class="font-weight-bold">@ViewBag.NbTachesTerminee</span>
    @{
        if (@ViewBag.NbTachesTerminee > 1)
        {
            <text>tâches terminées</text>
        }
        else if (@ViewBag.NbTachesTerminee == 1)
        {
            <text>tâche terminée</text>
        }
        else
        {
            <text>tâche terminée ....TRAVAILLE PLUS</text>
        }
        <text> / </text>  @ViewBag.ListeTache.Count;
    }
</p>


<p class="d-flex flex-column">
    <a asp-action="Create">Create New</a>
    <a asp-action="InitSaisie">Saisie groupée de tâches</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DateCreation)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DateEcheance)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Terminee)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Description)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DateCreation)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DateEcheance)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Terminee)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
