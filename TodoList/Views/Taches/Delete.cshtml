@model TodoList.Models.Tache

@{
    ViewData["Title"] = "Delete";
}

<div class="row">
    <div class="col-12 card text-center p-0">
        <div class="card-header">
            <h1>Suppression</h1>
            <h3>Êtes vous sûr de vouloir supprimer cette tâche ?</h3>
        </div>
        <div class="card-body">
            <dl class="row d-flex justify-content-center">
                <dt class="col-sm-6">
                    @Html.DisplayNameFor(model => model.Description)
                </dt>
                <dd class="col-sm-6">
                    @Html.DisplayFor(model => model.Description)
                </dd>
                <dt class="col-sm-6">
                    @Html.DisplayNameFor(model => model.DateCreation)
                </dt>
                <dd class="col-sm-6">
                    @Html.DisplayFor(model => model.DateCreation)
                </dd>
                <dt class="col-sm-6">
                    @Html.DisplayNameFor(model => model.DateEcheance)
                </dt>
                <dd class="col-sm-6">
                    @Html.DisplayFor(model => model.DateEcheance)
                </dd>
                <dt class="col-sm-6">
                    @Html.DisplayNameFor(model => model.Terminee)
                </dt>
                <dd class="col-sm-6">
                    @Html.DisplayFor(model => model.Terminee)
                </dd>
            </dl>
            <div class="row d-flex justify-content-center">
                <form asp-action="Delete">
                    <input type="hidden" asp-for="Id" />
                    <input type="submit" value="Supprimer" class="btn btn-danger" /> |
                    <a asp-action="Index">Retour à la liste</a>
                </form>
            </div>
        </div>
        <footer class="card-footer text-muted">
            <div class="container">
                &copy; 2020 - TodoList - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
            </div>
        </footer>
    </div>
</div>




    
</div>
